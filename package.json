{
  "name": "smallocator",
  "version": "0.1.0",
  "author": "0age",
  "description": "",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "prebuild": "rm -rf dist",
    "build": "esbuild src/index.ts --bundle --platform=node --outdir=dist --format=esm --sourcemap --packages=external && cp .env dist/ 2>/dev/null || true",
    "test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --config jest.config.ts --detectOpenHandles --maxWorkers=50% --maxConcurrency=7",
    "test:related": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --config jest.config.ts --bail --findRelatedTests src/__tests__/*.test.ts --maxWorkers=50% --maxConcurrency=7",
    "smoke-test": "node scripts/smoke-test.js",
    "smoke-test:precommit": "SMOKE_TEST_PORT=4000 node scripts/smoke-test.js",
    "lint": "eslint .",
    "type-check": "tsc --noEmit -p tsconfig.lint.json",
    "type-check:staged": "tsc --noEmit --skipLibCheck --skipDefaultLibCheck --target ES2022 --module ESNext --moduleResolution bundler --strict --esModuleInterop --forceConsistentCasingInFileNames --baseUrl . --paths viem:['./src/types/viem.d.ts'] --paths webauthn-p256:['./src/types/webauthn-p256.d.ts'] src/types/fastify.d.ts",
    "type-check:staged-files": "tsc --noEmit --skipLibCheck --skipDefaultLibCheck",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "prepare": "husky",
    "check-test-files": "node scripts/check-test-files.js",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "**/*.{test,spec}.ts": [
      "node scripts/check-test-files.js"
    ],
    "src/**/*.ts": [
      "prettier --write",
      "eslint --fix",
      "prettier --check",
      "eslint --max-warnings 0",
      "tsc --noEmit --skipLibCheck",
      "pnpm test:related",
      "pnpm smoke-test:precommit"
    ],
    "*.{json,md}": [
      "prettier --write",
      "prettier --check"
    ]
  },
  "dependencies": {
    "@electric-sql/pglite": "^0.2.14",
    "@fastify/cors": "^8.4.1",
    "@fastify/env": "^4.3.0",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "graphql": "^16.8.1",
    "graphql-request": "^6.1.0",
    "viem": "^2.21.53"
  },
  "devDependencies": {
    "@types/emscripten": "^1.39.13",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.9.1",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.2.2"
  },
  "packageManager": "pnpm@9.14.1+sha512.7f1de9cffea40ff4594c48a94776112a0db325e81fb18a9400362ff7b7247f4fbd76c3011611c9f8ac58743c3dc526017894e07948de9b72052f874ee2edfdcd"
}
