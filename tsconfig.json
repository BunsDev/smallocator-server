{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "noEmit": true,
    "paths": {
      "viem": ["./src/types/viem.d.ts"],
      "webauthn-p256": ["./src/types/webauthn-p256.d.ts"]
    },
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    "checkJs": false,
    "types": ["node", "jest"]
  },
  "include": ["src/**/*", "src/**/*.test.ts", "src/types/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
